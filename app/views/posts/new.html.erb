<div class="pagebody">


  <h1> NEW POST </h1>


<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
<textarea id="post_content" class='wysihtml5' placeholder="Enter text ...">
    <%= f.label :content %>
  <%= f.text_area :content %>

  <%= f.submit %>
<% end %>


</textarea>

<script type="text/javascript">
  $(function(){

    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

  })
</script>



